# Server Configuration
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# Groq AI API Configuration
GROQ_API_KEY=your_groq_api_key_here

# Email Configuration
# Choose one of the following email services:

# Option 1: Gmail
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here

# Option 2: SendGrid
# EMAIL_SERVICE=sendgrid
# SENDGRID_API_KEY=your_sendgrid_api_key_here

# Option 3: Custom SMTP
# EMAIL_SERVICE=smtp
# SMTP_HOST=smtp.yourdomain.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your_smtp_username
# SMTP_PASSWORD=your_smtp_password

# Database Configuration (Optional - for future MongoDB integration)
# MONGODB_URI=mongodb://localhost:27017/ai-summarizer
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/ai-summarizer
